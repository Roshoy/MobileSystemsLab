<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edgy_blue">
    <EditText
        android:id="@+id/center_of_all"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_height="0dp"
        android:layout_width="0dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:background="@color/black"
        android:text="@string/hello_string"
        android:textAlignment="center"
        android:textColor="@color/font_color"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/center_of_all"/>

    <EditText
        android:id="@+id/second_edit_text"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/center_of_all"
        android:background="@android:color/holo_orange_dark"
        android:text="@string/adventure_string"
        android:layout_marginRight="20sp"
        android:textSize="28sp"
        android:textStyle="bold" />
</RelativeLayout>
